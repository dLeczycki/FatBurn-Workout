<Window x:Class="Workout.Gym.CustomizedCheckBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workout.Gym"
        mc:Ignorable="d"
        Title="CustomizedCheckBox" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <ContentControl Width="100" Height="100">
            <Grid>
                <!-- Make sure the Checkbox is the foremost element -->
                <CheckBox Grid.ZIndex="99" />
                
                    
                    <Image x:Name="imageSchoulder" Source="/img/schoulder.png" HorizontalAlignment="Right"/>
                
                
            </Grid>
        </ContentControl>
    </Grid>
</Window>
